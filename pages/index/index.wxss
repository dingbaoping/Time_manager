.container {
  padding-top: 10px;
}

.tip{
  position: fixed;
  margin-top:-10px;
  width: 100%;
  height: 100%;
}

.todoArea {
  width: 97%;
  height: 55px;
  background-color: #ddd;
  margin: 7px 0px 0px 1.8%;
  font-size: 18px;
  color: #37bc9b;
  box-shadow: 0 2px 3px #888888;
}

.todoBar {
  width: 100%;
  height: 55px;
  background-color: #ffffff;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}

.text {
  line-height: 51px;
}

.todoProgress {
  padding-left: 10px;
  display: inline-block;
}

.todoText {
  padding-left: 10px;
  display: inline-block;
}

.workImg {
  float: right;
  height: 40px;
  width: 40px;
}

.todoTime {
  float: right;
  padding-right: 10px;
}

.todoDone {
  float: right;
  padding-right: 10px;
}

.float{
  position: fixed;
  text-align: center;
  top: 90%;
  left: 85%;
  height: 40px;
  width: 40px;
  line-height: 40px;
  border-radius: 20px;
  background-color: #37bc9b;
  color: #fff;
  font-size: 30px;
  font-weight: 900;
  z-index: 1;
  box-shadow: -2px 2px 3px #888888;
}

.add {
  position: fixed;
  text-align: center;
  top: 82%;
  left: 85%;
  height: 0;
  width: 0;
  border-radius: 20px;
  background-color: #37bc9b;
  z-index: 1;
  box-shadow: -2px 2px 3px #888888;
}

.clear {
  position: fixed;
  text-align: center;
  top: 74%;
  left: 85%;
  height: 0;
  width: 0;
  border-radius: 20px;
  background-color: #37bc9b;
  z-index: 1;
  box-shadow: -2px 2px 3px #888888;
}

.addForm {
  background-color: #ffffff;
  height: 350px;
  width: 100%;
  padding-top: 20px;
  position: fixed;
  top: 101%;
  box-shadow:0 -2px 3px #888888;
}

.todoName {
  position: relative;
  color: #37bc9b;
  border: 1px solid #37bc9b;
  margin: auto;
  padding: 2px 0px 2px 6px;
  width: 90%;
  height: 10%;
  border-radius: 5px;
  background-color: inherit;
  z-index: 1;
}

.place {
  color: #ddd;
}

.timePicker {
  width: 100%;
  height: 200px;
  color: #37bc9b;
  position: relative;
  top: -50px;
  z-index: 0;
}

.label {
  display: inline-block;
  position: relative;
  color: #37bc9b;
  padding: 15px 0px 15px 5%;
  z-index: 1;
}

.formButton {
  position: relative;
  top: -80px;
  display: flex;
  justify-content: space-around;
}

/*修改表单*/

.editForm {
  background-color: #fff;
  height: 350px;
  width: 100%;
  padding-top: 20px;
  position: fixed;
  top: 101%;
  z-index: 1;
  box-shadow:0 -3px 3px #888888;
}
